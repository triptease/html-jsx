{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@triptease/html-jsx",
    "types": ["vitest/globals"],
    "plugins": [
      {
        "transform": "../src/transformer.ts",
        "type": "program"
      }
    ]
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
